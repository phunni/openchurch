<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    <persistence-unit name="openchurch_users">
        <provider>oracle.toplink.essentials.PersistenceProvider</provider>
        <jta-data-source>jdbc/openchurch</jta-data-source>
        <class>uk.co.monkeypower.openchurch.core.users.entities.User</class>
        <class>uk.co.monkeypower.openchurch.core.users.entities.Address</class>
        <class>uk.co.monkeypower.openchurch.core.users.entities.Role</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.Menu</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.MenuItem</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.ContentModule</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.Page</class>
        <properties>
        <property name="toplink.logging.level" value="CONFIG"/>
    </properties>
    </persistence-unit>
    <persistence-unit name="openchurch_users_test">
        <provider>oracle.toplink.essentials.PersistenceProvider</provider>
        <class>uk.co.monkeypower.openchurch.core.users.entities.User</class>
        <class>uk.co.monkeypower.openchurch.core.users.entities.Address</class>
        <class>uk.co.monkeypower.openchurch.core.users.entities.Role</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.Menu</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.MenuItem</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.ContentModule</class>
        <class>uk.co.monkeypower.openchurch.core.layout.entities.Page</class>
        <properties>
        <property name="toplink.logging.level" value="FINEST"/>
    </properties>
    </persistence-unit>
</persistence>